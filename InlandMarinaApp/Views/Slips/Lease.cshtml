@model MarinaData.Lease

@{
    Model.CustomerID = ViewBag.CustomerID;
}

<h1>Lease</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Lease" method="post">
            <p>
                <label asp-for="SlipID" class="control-label"></label>
                <select name="SlipID" asp-items="@ViewBag.Slips" asp-for="SlipID" class="form-select"></select>
            </p>
            <div class="form-group">
                <input asp-for="CustomerID" class="form-control" hidden readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>